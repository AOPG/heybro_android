<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="325dp"
        android:layout_margin="80dp"
        android:background="@drawable/basket_room_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/roomNum"
            android:layout_width="55dp"
            android:layout_height="27dp"
            android:layout_margin="10dp"
            android:text="100020"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <Button
            android:id="@+id/join_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="185dp"
            android:background="@drawable/room_error"/>
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:layout_width="193dp"
            android:layout_height="200dp">
            <ListView
                android:id="@+id/roomDetail_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#535050">
            </ListView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="195dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal">

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/textViewRoomPass"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="房间密码"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <EditText
                android:layout_centerVertical="true"
                android:id="@+id/roomPassword"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="65dp"
                android:password="true"
                android:numeric="integer"
                android:background="@drawable/basket_spinner_corner"
                android:hint="请输入"
                android:textColor="#f5f5f5"
                android:textSize="15dp">
            </EditText>
        </RelativeLayout>
        <!-- 创建房间后 跳到房间界面-->
        <Button
            android:id="@+id/join_room"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/basket_room_establish"
            android:text="加入房间"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>
