<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <!--背景图是用户上传好的-->
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="260dp"
       android:background="@drawable/friend_banner"
       android:alpha="0.8"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal">
           <!--返回原来的界面-->
           <ImageView
               android:id="@+id/back"
               android:layout_width="22dp"
               android:layout_height="19dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="17dp"
               android:src="@drawable/back" />
           <!--对其他用户的设置-->
           <ImageView
               android:id="@+id/set_friend"
               android:layout_marginLeft="280dp"
               android:layout_marginTop="13dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/more"/>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:gravity="center_horizontal">
               <!--好友的头像  实现圆角-->
               <ImageView
                   android:id="@+id/friend_img"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:background="@drawable/pic"/>
           </LinearLayout>
           <!--好友昵称-->
           <TextView
               android:id="@+id/user_name"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:text="昵称"
               android:gravity="center_horizontal"
               android:textColor="#ffffff"
               android:textSize="20dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:gravity="center_horizontal"
               android:orientation="horizontal">
               <!--id号-->
               <TextView
                   android:id="@+id/userId"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="用户ID"
                   android:textColor="#FFFFFF"/>
               <LinearLayout
                   android:layout_width="30dp"
                   android:layout_height="wrap_content">
               </LinearLayout>
               <!--地址-->
               <TextView
                   android:id="@+id/user_province"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="地址"
                   android:textColor="#FFFFFF"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="·"
                   android:textColor="#FFFFFF"/>
               <TextView
                   android:id="@+id/user_city"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="地址"
                   android:textColor="#FFFFFF"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="20dp"
                       android:text="等级"
                       android:gravity="center_horizontal"
                       android:textColor="#FFFFFF"/>
                   <!--用户等级-->
                   <TextView
                       android:id="@+id/user_class"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text="写个等级"
                       android:textColor="#FFFFFF"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <!--用户擅长位置-->
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="20dp"
                       android:text="擅长位置"
                       android:gravity="center_horizontal"
                       android:textColor="#FFFFFF"/>
                   <TextView
                       android:id="@+id/user_location"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text=""
                       android:textColor="#FFFFFF"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="20dp"
                       android:text="战绩"
                       android:gravity="center_horizontal"
                       android:textColor="#FFFFFF"/>
                   <!--用户战绩-->
                   <TextView
                       android:id="@+id/user_zhanji"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text=""
                       android:textColor="#FFFFFF"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#535050"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#716A6A"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="查看装备"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
            <!--查看装备-->
            <ImageView
                    android:id="@+id/chakan_zhuangbei"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right"
                    android:layout_marginLeft="150dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#716A6A"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="个性签名"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
                <!-- 个性签名-->
                <TextView
                    android:id="@+id/qianming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="写一些东西吧"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#BBBBBB"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="动         态"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
                <!--显示动态图片-->
                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/dongtai_img1"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pic"/>
                    <ImageView
                        android:id="@+id/dongtai_img2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pic"/>
                    <ImageView
                        android:id="@+id/dongtai_img3"
                        android:layout_marginLeft="5dp"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pic"/>
                </LinearLayout>
                <!--查看动态-->
                <ImageView
                    android:id="@+id/chakan_dongtai"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--关注好友 这时针对于 未关注的好友 若是已关注的好友则由  关注  变为发送消息
    若是未关注点击该按钮会提示toast提示关注成功
    如果是好友则点击发送消息 跳转到single_chat_activity页面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/guanzhu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/tianqibgm"
            android:text="关注"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/liaotian"
            android:text="测试"
            android:textColor="#ffffff"
            android:background="@drawable/unlogin"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>