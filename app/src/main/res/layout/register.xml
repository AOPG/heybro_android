<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.79"
        android:orientation="vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/aaa"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/register_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号账号"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/RigsterPhone"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="手机号  +86"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:id="@+id/register_phone"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:hint="手机号"
                        android:textColorHint="#A49D9D"
                        android:textColor="#ffffff"
                        android:textSize="12dp"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_height="0.5dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <!--验证码-->
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView

                        android:layout_width="79dp"
                        android:layout_height="30dp"
                        android:text="验证码"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_height="30dp"
                        android:id="@+id/register_validation"
                        android:layout_width="120dp"
                        android:hint="4位数字"
                        android:textColorHint="#A49D9D"
                        android:textColor="#ffffff"
                        android:inputType="number"
                        android:textSize="12dp"/>
                    <Button
                        android:id="@+id/register_validation_btn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:text="验证码"
                        android:textColor="#ffffff"
                        android:background="@drawable/register_yanzheng_corner"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_height="0.5dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="密     码"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:id="@+id/register_password"
                        android:layout_width="175dp"
                        android:layout_height="30dp"
                        android:hint="请输入密码"
                        android:password="true"
                        android:textColorHint="#A49D9D"
                        android:textColor="#ffffff"
                        android:textSize="12dp"/>
                    <Button
                        android:layout_gravity="right|center_vertical"
                        android:id="@+id/register_show"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/register_look"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_height="0.5dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:id="@+id/register"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/login_btn_corner"
                    android:text="注册"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tixing"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="点击注册，表示您已经阅读并同意"
                android:textColor="#ffffff"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey!bro用户协议"
                android:textColor="#0e6dfd"
                android:textSize="12dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>