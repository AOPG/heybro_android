<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:background="@drawable/beijing"
        android:alpha="0.79"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#000000"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/register_cancel"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="手机号账号"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:paddingTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="手机号  +86"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/register_phone"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="手机号"
                        android:layout_margin="20dp"
                        android:textColor="#A49D9D"
                        android:textSize="15dp"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <!--验证码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="验证码"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/register_yanzheng"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="4位数字"
                        android:layout_marginTop="20dp"
                        android:textColor="#A49D9D"
                        android:textSize="15dp"/>
                    <Button
                        android:id="@+id/register_yanzheng_btn"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="验证码"
                        android:textColor="#ffffff"
                        android:background="@drawable/register_yanzheng_corner"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="密码"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/register_password"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="密码"
                        android:layout_marginTop="20dp"
                        android:textColor="#A49D9D"
                        android:textSize="15dp"/>

                    <Button
                        android:layout_marginTop="20dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/register_look"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:id="@+id/register"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/login_btn_corner"
                    android:text="注册"
                    android:textSize="20dp"
                    android:textColor="#BEC2C9"/>
                <LinearLayout
                    android:layout_marginTop="150dp"
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tixing"
                        android:layout_height="20dp"
                        android:layout_width="180dp"
                        android:text="点击注册，表示您已经阅读并同意"
                        android:textColor="#ffffff"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/xieyi"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:text="Hey!bro用户协议"
                        android:textColor="#0e6dfd"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>