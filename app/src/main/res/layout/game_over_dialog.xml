<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/basket_room_corner">

    <TextView
        android:layout_weight="0.8"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="本功能适用于需要记录自己打球数据的球友"
        android:textColor="#BBBBBBBB"
        android:textSize="10dp"
        android:gravity="center" />
    <TextView
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="请填写比赛结果"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:gravity="center" />
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/zhanjiID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--比赛获胜选项-->
            <RadioButton
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:id="@+id/radioWin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="  胜"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:checked="true"
                android:background="@null"
                android:button="@drawable/radio_button_style" />
            <!--比赛失败选项-->
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:id="@+id/radioLose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="  负"
                android:textSize="15dp"
                android:background="@null"
                android:textColor="#ffffff"
                android:checked="false"
                android:button="@drawable/radio_button_style" />
        </RadioGroup>

    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="得分"
                    android:textSize="12dp"
                    android:textColor="#ffffff"/>
                <!--输入得分-->
                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/score"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/basket_spinner_corner"
                    android:hint="请输入"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="助攻"
                    android:textSize="12dp"
                    android:textColor="#ffffff"/>
                <!--助攻-->
                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:id="@+id/zhugong"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/basket_spinner_corner"
                    android:hint="请输入"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抢断"
                    android:textSize="12dp"
                    android:textColor="#ffffff"/>
                <!--抢断-->
                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:id="@+id/qiangduan"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/basket_spinner_corner"
                    android:hint="请输入"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="篮板"
                    android:textSize="12dp"
                    android:textColor="#ffffff"/>
                <!--篮板-->
                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:id="@+id/lanban"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/basket_spinner_corner"
                    android:hint="请输入"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盖帽"
                    android:textSize="12dp"
                    android:textColor="#ffffff"/>
                <!--盖帽-->
                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:id="@+id/gaimao"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/basket_spinner_corner"
                    android:hint="请输入"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="失误"
                    android:textSize="12dp"
                    android:textColor="#ffffff"/>
                <!--失误-->
                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:id="@+id/shiwu"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/basket_spinner_corner"
                    android:hint="请输入"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#A49D9D"
        android:layout_gravity="center_horizontal" />
    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="15dp"
                android:id="@+id/ensure_score"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/basket_room_establish"
                android:text="确认"
                android:textColor="#535050"
                android:textSize="12dp"/>
            <Button
                android:id="@+id/cancel_score"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/basket_room_establish"
                android:text="直接退出"
                android:textColor="#535050"
                android:textSize="12dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>