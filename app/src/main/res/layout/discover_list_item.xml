<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true">

<!--第一部分-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.aopg.heybro.ui.discover.RoundImageView
                android:id="@+id/distrend_picfir"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">
            </com.aopg.heybro.ui.discover.RoundImageView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dictrend_textfir"
                    android:layout_marginTop="5dp"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="昵称"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/distrend_textsec"
                    android:layout_marginTop="3dp"
                    android:text="111"
                    android:textSize="13dp"
                    android:layout_width="150dp"
                    android:layout_height="18dp" />
            </LinearLayout>

        </LinearLayout>

    <!--第二部分-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distrend_textthir"
                android:layout_width="200dp"
                android:text="1111"
                android:textSize="15dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:layout_marginLeft="50dp"
                android:id="@+id/distrend_picsec"
                android:layout_width="100dp"
                android:layout_height="70dp"/>

        </LinearLayout>

    <!--第三部分-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/discover_priaise"
                android:layout_height="18dp" />
            
            <TextView
                android:layout_width="30dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="喜欢"
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="18dp"
                android:src="@drawable/discover_remark"
                android:layout_height="18dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="评论"
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="20dp"></LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/discover_item"
                android:layout_height="18dp" />

        </LinearLayout>

    <!--第四部分-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="20dp">

            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/discover_priaset"
                android:layout_height="18dp"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/distrend_textfor"
                android:layout_width="150dp"
                android:textSize="12dp"
                android:layout_height="20dp" />

        </LinearLayout>

    <!--第五部分-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distrend_textfif"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="200dp"
                android:text="14dp"
                android:layout_height="20dp" />

        </LinearLayout>



</LinearLayout>