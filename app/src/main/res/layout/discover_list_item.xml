<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#555555"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:clickable="true">

<!--第一部分-->
    <LinearLayout
        android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.aopg.heybro.ui.discover.RoundImageView
                android:layout_gravity="top"
                android:id="@+id/distrend_picfir"
                android:layout_width="43dp"
                android:layout_height="43dp">
            </com.aopg.heybro.ui.discover.RoundImageView>



        </LinearLayout>

    <!--第二部分-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:textColor="#dddddd"
                android:id="@+id/dictrend_textfir"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:text="昵称"
                android:textSize="13dp" />
            <TextView
                android:layout_weight="2"
                android:textColor="#bbbbbb"
                android:id="@+id/distrend_textsec"
                android:layout_marginTop="3dp"
                android:text="111"
                android:textSize="9dp"
                android:layout_width="150dp"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#cccccc"
                android:id="@+id/distrend_textthir"
                android:layout_width="wrap_content"
                android:text="1111"
                android:textSize="12dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/distrend_picsec"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <!--第三部分-->
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="11dp"
                    android:src="@drawable/favorites"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="#aaaaaa"
                    android:layout_width="wrap_content"
                    android:text="喜欢"
                    android:textSize="9dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/like"
                android:id="@+id/pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_width="12dp"
                    android:src="@drawable/comments"
                    android:layout_height="18dp"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="#aaaaaa"
                    android:layout_width="wrap_content"
                    android:text="评论"
                    android:textSize="9dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:src="@drawable/discover_more"
                android:layout_height="18dp" />

        </RelativeLayout>

        <!--第四部分-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <ImageView
                android:layout_width="11dp"
                android:src="@drawable/discover_priaset"
                android:layout_height="18dp"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:id="@+id/distrend_textfor"
                android:layout_width="match_parent"
                android:textSize="10dp"
                android:textColor="#aaaaaa"
                android:layout_height="20dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>