<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:background="@drawable/beijing"
        android:alpha="0.79"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <!--程序名称-->
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:text="Hey!bro"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="50sp"
                android:gravity="center"/>
            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--用户-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/login_user"/>
                    <TextView
                        android:id="@+id/login_user"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="手机号/邮箱/账号"
                        android:layout_margin="15dp"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>
                </LinearLayout>
                <View  android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <!--密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/login_password"/>
                    <TextView
                        android:id="@+id/login_password"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:text="登陆密码"
                        android:layout_margin="15dp"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>
                    <!--找回密码，暂时不实现-->
                    <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/login_ask"/>
                </LinearLayout>
                <View  android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <!-- 登陆按钮-->
                <Button
                    android:id="@+id/login"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/login_btn_corner"
                    android:text="登陆"
                    android:textSize="20dp"
                    android:textColor="#BEC2C9"/>
                <!-- 手机验证码登录，可暂时不实现-->
                <TextView
                    android:id="@+id/yanzheng"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:text="手机验证码登录"
                    android:textColor="#0e6dfd"
                    android:textSize="15dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:layout_width="120dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal"/>
                <!--微信微博登录 可暂时不实现-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/login_wechat"/>
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/login_weibo"/>
                </LinearLayout>
                <!-- 注册账号-->
                <TextView
                    android:id="@+id/login_register"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:text="注册账号"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
