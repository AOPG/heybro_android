<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323238"
    android:orientation="vertical">

    <!--天气控件待实现，先用静态代替-->
    <FrameLayout
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <!--  android:alpha 设置透明度-->
        <!-- 天气显示-->
        <ImageView
            android:id="@+id/weather_img"
            android:scaleType="centerCrop"
            android:src="@drawable/weather_sunny"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_info"
                    android:textSize="35dp"
                    android:text="晴"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/weather_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20°"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:text="PM 2.5  "
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/weather_pm2_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 搜索功能-->
            <Button
                android:id="@+id/basket_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/search" />
            <!-- 需要实现日历日期的显示-->
            <Button
                android:id="@+id/basket_calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/basket_calender" />
        </LinearLayout>
        <View
            android:background="#33000000"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>
    </FrameLayout>

    <!-- 打球模式菜单栏-->
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="39dp"
            android:background="#323238">
            <!--打球-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/date_ball"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#323238"
                    android:text="打球"
                    android:textColor="#E8DCDC"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/ball_selected"
                    android:layout_height="0.5dp"
                    android:layout_width="25dp"
                    android:background="#9FF43C"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <!--比赛-->
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/date_game"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#323238"
                    android:text="比赛"
                    android:textColor="#E8DCDC"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/game_selected"
                    android:layout_height="0.5dp"
                    android:layout_width="25dp"
                    android:background="#9FF43C"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.aopg.heybro.ui.room.CustomViewPager
        android:id="@+id/basketball_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#323238"
        android:layout_weight="1" />
</LinearLayout>

