<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--天气控件待实现，先用静态代替-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#9FF43C"
        android:orientation="horizontal">
        <!--  android:alpha 设置透明度-->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:alpha="0.8" >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/weather_sunny"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="晴 20°"
                android:textSize="30dp"
                android:textColor="#101010"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:textStyle="bold"/>
            <!--中文设置加粗就需要在代码中获取到当前TextView在进行设置:复制代码 代码
            TextView tv = (TextView)findViewById(R.id.tv);
            TextPaint tp = tv.getPaint();
            tp.setFakeBoldText(true); -->
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="PM 2.5  30"
                android:textSize="15dp"
                android:textColor="#101010"
                android:paddingLeft="10dp"
                android:layout_marginTop="60dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/basket_search"/>
            <!-- 需要实现日历日期的显示-->
            <Button
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/basket_calender"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#535050">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#535050"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#535050" />
    </LinearLayout>
</LinearLayout>
