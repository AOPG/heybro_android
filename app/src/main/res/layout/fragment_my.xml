                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    />

                <TextView
                    android:id="@+id/rd12"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
