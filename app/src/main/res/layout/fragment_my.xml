                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd91"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    />

                <TextView
                    android:id="@+id/rd92"
                    android:layout_width="wrap_content"
