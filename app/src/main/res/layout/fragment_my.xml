<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wodebeijing"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--我的昵称 -->
                <TextView
                    android:id="@+id/myName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="26dp"/>
                <!-- 设置 会跳转settings页面-->
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/setting"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="25dp"
                    android:src="@drawable/setting"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <!--我的头像 需要实现圆形 有点击事件，跳转到fragment_my_ziliao-->
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/image"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="简介："
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"/>
                        <!--个人简介 -->
                        <TextView
                            android:id="@+id/user_intro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:text="今天天气真好"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textColor="#fffff0"
                            android:textSize="14dp"
                            android:text="ID："/>
                        <!-- 个人ID-->
                        <TextView
                            android:id="@+id/user_code"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textColor="#fffff0"
                            android:textSize="14dp"
                            android:text="111111"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#535050">
            <TableLayout
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TableRow>
                    <!-- 等级按钮，有点击事件 -->
                    <Button
                        android:id="@+id/rating"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:text="等级:3级"
                        android:background="#1fffffff"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                    <!--  擅长位置按钮，有点击事件-->
                    <Button
                        android:textSize="12dp"
                        android:id="@+id/position"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:text="擅长位置"
                        android:background="#1fffffff"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"/>
                    <!-- 战绩按钮，无点击事件 获胜场数/总场数-->
                    <Button
                        android:textSize="12dp"
                        android:id="@+id/grade"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:text="战绩1/3"
                        android:background="#1fffffff"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:paddingTop="30dp"
                android:paddingBottom="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1fffffff"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 扫一扫有点击事件,跳转到fragment_my_saoyisao页面-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:id="@+id/saoyisao"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/saoyisao" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="扫一扫"
                            android:layout_gravity="center"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <!-- 竞猜有点击事件-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/jingcai"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/jingcai"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="我的竞猜"
                            android:layout_gravity="center"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <!-- 我的装备有点击事件-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/zhuangbei"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/zhuangbei"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="我的装备"
                            android:layout_gravity="center"
                            android:textSize="12dp"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:id="@+id/rili"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/rili" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="打球日历"
                            android:layout_gravity="center"
                            android:textSize="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/data"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/data"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="我的数据"
                            android:layout_gravity="center"
                            android:textSize="10dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/shopping"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/shopping"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="商城"
                            android:layout_gravity="center"
                            android:textSize="10dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:id="@+id/dingdan"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/dingdan" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="我的订单"
                            android:layout_gravity="center"
                            android:textSize="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/qianbao"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/qianbao"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="我的钱包"
                            android:layout_gravity="center"
                            android:textSize="10dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/kefu"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/kefu"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="客服"
                            android:layout_gravity="center"
                            android:textSize="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/position_show"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:background="#bf000000">
        <!-- 级别到了就选中，并且将字体颜色改为白色-->
        <!-- 该图片有点击事件 退出该页-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/position_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/room_error" />
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="true" />

                <TextView
                    android:id="@+id/cb12"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="球后卫(PG)"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb21"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/cb22"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="得分后卫(SG)"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb31"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/cb32"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="中锋(C)"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb41"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/rd42"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="小前锋(SF)"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb51"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/cb52"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="大前锋(PF)"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/rating_show"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:background="#bf000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 级别到了就选中，并且将字体颜色改为白色，第一个为默认选中的-->
            <ImageView
                android:id="@+id/rating_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/room_error" />
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="true" />
                <TextView
                    android:id="@+id/rd12"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅰ级 看台围观"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd21"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/rd22"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅱ级 冷板凳"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd31"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/rd32"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅲ级 替补"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd41"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/rd421"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅳ级 第六人"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd51"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/rd52"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅴ级 角色球员"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd61"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />
                <TextView
                    android:id="@+id/rd62"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅵ级 你正在吸引女神的注意力"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd71"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    />

                <TextView
                    android:id="@+id/rd72"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅶ级 有小可爱给你送水"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd81"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    />

                <TextView
                    android:id="@+id/rd82"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅷ级 你一上场就是焦点"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rd91"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/rd92"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Ⅸ级 MVP非你莫属"
                    android:textColor="#bbbbbb"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
