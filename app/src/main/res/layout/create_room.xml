<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_margin="80dp"
        android:background="@drawable/basket_room_corner"
        android:orientation="vertical">
        <TextView
            android:id="@+id/roomNum"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="100020"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <Button
            android:id="@+id/create_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/room_error"/>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="房间名称"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/set_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="65dp"
                android:background="@drawable/basket_spinner_corner" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="72dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="模     式"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <!-- 下拉菜单-->
            <Spinner
                android:id="@+id/spinner_mode"
                android:entries="@array/spinner_mode"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="65dp"
                android:spinnerMode="dialog"

                android:background="@drawable/basket_spinner_corner" />
                <!--<TextView
                    android:id="@+id/spinner1_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/basket_spinner_corner"/>
                -->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="102dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="等级要求"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <Spinner
                android:id="@+id/spinner_rate"
                android:entries="@array/spinner_rate"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="65dp"
                android:spinnerMode="dialog"
                android:background="@drawable/basket_spinner_corner" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="132dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="房间人数"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <!-- 下拉菜单  待实现-->
            <Spinner
                android:id="@+id/spinner_num"
                android:entries="@array/spinner_num"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="65dp"
                android:spinnerMode="dialog"
                android:background="@drawable/basket_spinner_corner" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="162dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="设置密码"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/set_roomPassword"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="65dp"
                android:password="true"
                android:numeric="integer"
                android:background="@drawable/basket_spinner_corner"
                android:hint="请输入"
                android:textColor="#f5f5f5"
                android:textSize="15dp">
            </EditText>
        </RelativeLayout>
        <!-- 创建房间后 跳到房间界面-->
        <Button
            android:id="@+id/btn_create_finish"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/basket_room_establish"
            android:text="完成创建"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>
