<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#656862"
        android:orientation="horizontal">
        <!-- 返回 有点击事件-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
        <!--房间名称-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="房间信息"
            android:textSize="18dp"/>
        <!--房间具体信息-->
    </RelativeLayout>

    <!--参考实现地址 https://blog.csdn.net/eastmoon502136/article/details/50650350-->

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#535050"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <GridView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/user_list"
                    android:numColumns="auto_fit"
                    android:columnWidth="60dp"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="5dp"
                    android:listSelector="#00000000"
                    android:cacheColorHint="#00000000"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <View  android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!--房间名称-->
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间名称"
                    android:textColor="#bbbbbb" />
                <!--设置房间名称-->
                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:id="@+id/set_roomName"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="15dp"
                        android:layout_height="13dp"
                        android:src="@drawable/right_gray" />
                </LinearLayout>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/set_roomName"
                    android:id="@+id/roomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="师大篮球小分队"
                    android:gravity="center"
                    android:textColor="#bbbbbb" />
            </RelativeLayout>
            <View  android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#A49D9D"
                android:layout_gravity="center_horizontal" />
            <!--模式-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模  式"
                    android:textColor="#bbbbbb" />
                <!--设置模式-->
                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:id="@+id/set_roomModel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="15dp"
                        android:layout_height="13dp"
                        android:src="@drawable/right_gray" />
                </LinearLayout>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/set_roomModel"
                    android:id="@+id/roomModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3V3"
                    android:textColor="#bbbbbb" />

            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#A49D9D"
                android:layout_gravity="center_horizontal" />
            <!--设置密码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置密码"
                    android:textColor="#bbbbbb" />
                <!--设置房间密码-->
                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:id="@+id/set_roomPassword"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="15dp"
                        android:layout_height="13dp"
                        android:src="@drawable/right_gray" />
                </LinearLayout>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/set_roomPassword"
                    android:id="@+id/roomPassword"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里是密码"
                    android:inputType="textPassword"
                    android:gravity="center"
                    android:textColor="#bbbbbb" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/finish_game"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#9FF43C"
        android:text="完成比赛"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

</LinearLayout>

