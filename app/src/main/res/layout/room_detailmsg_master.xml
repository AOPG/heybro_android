<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#656862"
        android:orientation="horizontal">
        <!-- 返回 有点击事件-->
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>
        <!--房间名称-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="房间信息"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
        <!--房间具体信息-->
    </LinearLayout>

    <!--参考实现地址 https://blog.csdn.net/eastmoon502136/article/details/50650350-->

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#535050"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--实现头像圆角-->
                    <ImageView
                        android:id="@+id/roomMeber"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/pic"/>
                    <!--用户名-->
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="昵称"
                        android:textColor="#bbbbbb"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/room_invisit_corner">
                    <Button
                        android:id="@+id/addMember"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/add"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <View  android:layout_height="1dp"
                    android:layout_width="300dp"
                    android:background="#A49D9D"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <!--房间名称-->
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="房间名称"
                    android:gravity="center_vertical"
                    android:textColor="#bbbbbb" />
                <TextView
                    android:id="@+id/roomName"
                    android:layout_marginLeft="50dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="师大篮球小分队"
                    android:gravity="center"
                    android:textColor="#bbbbbb" />
                <!--设置房间名称-->
                <ImageView
                    android:id="@+id/set_roomName"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_gray"
                    android:gravity="right"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="300dp"
                android:background="#A49D9D"
                android:layout_gravity="center_horizontal" />
            <!--模式-->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="模         式"
                    android:gravity="center_vertical"
                    android:textColor="#bbbbbb" />
                <!--设置模式-->
                <TextView
                    android:id="@+id/roomModel"
                    android:layout_marginLeft="50dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="3V3"
                    android:gravity="center"
                    android:textColor="#bbbbbb" />
                <ImageView
                    android:id="@+id/set_roomModel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_gray"
                    android:gravity="right"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="300dp"
                android:background="#A49D9D"
                android:layout_gravity="center_horizontal" />
            <!--设置密码-->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="设置密码"
                    android:gravity="center_vertical"
                    android:textColor="#bbbbbb" />
                <!--设置房间密码-->
                <TextView
                    android:id="@+id/roomPassword"
                    android:layout_marginLeft="50dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="这里是密码"
                    android:gravity="center"
                    android:textColor="#bbbbbb" />
                <ImageView
                    android:id="@+id/set_roomPassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_gray"
                    android:gravity="right"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/finish_game"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#9FF43C"
        android:text="完成比赛"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

</LinearLayout>

