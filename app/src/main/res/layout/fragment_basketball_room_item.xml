<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--房间-->
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:background="@drawable/basket_corners_bg"
        android:orientation="vertical">
        <!--房间号-->
        <TextView
            android:id="@+id/ball_room_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="100020"
            android:textColor="#E8DCDC"
            android:textSize="23dp"></TextView>
        <!-- 房间信息-->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.5"
                android:src="@drawable/basket_room" />
            <!--房间名称-->
            <TextView
                android:id="@+id/ball_room_name"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="师大篮球小分队"
                android:textColor="#E8DCDC"
                android:textSize="25sp"></TextView>
            <!-- 房间实际人数和房间容纳人数   待完成-->
            <TextView
                android:id="@+id/ball_room_num"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="100dp"
                android:text="3/5"
                android:textColor="#E8DCDC"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>